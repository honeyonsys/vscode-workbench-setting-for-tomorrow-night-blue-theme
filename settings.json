// required JetBrains Mono Font to be installed
// required language support plugin by redhat
{
    "workbench.sideBar.location": "right",
    "editor.stickyScroll.enabled": false,
    "editor.minimap.enabled": false,
    "editor.fontSize": 15,
    "editor.fontFamily": "Jetbrains Mono",
    "boot-java.rewrite.reconcile": true,
    "git.confirmSync": false,
    "git.autofetch": true,
    "redhat.telemetry.enabled": true,
    "workbench.editor.titleScrollbarSizing": "large",
    "workbench.colorTheme": "Tomorrow Night Blue",
    "workbench.colorCustomizations": {
        "editor.background": "#000C1A",
        "editor.selectionBackground": "#02428b",
        "statusBar.background": "#01365A",
        "statusBar.debuggingBackground": "#D97200",
        "statusBar.foreground": "#fff",
        "sideBar.background": "#001D40",
        "editor.lineHighlightBackground": "#001C46",
        "tab.activeBorderTop": "#D97200",
        "tab.activeBorder": "#D97200"
    }
}
